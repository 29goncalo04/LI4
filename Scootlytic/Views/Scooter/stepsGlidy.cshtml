@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Steps</title>
  <link rel="stylesheet" href="/css/stepsGlidy.css">
</head>
<body>


  <div class="header">
    <h1 class="title">STEPS</h1>
    <img src="/images/backArrow.png" alt="Back" class="back-button">
  </div>

  <div class="container">
    <div class="step-content">
      <div class="instruction">
        Step <span id="step-number">1</span>:
        <span id="step-instruction">Assemble the frame and deck.</span>
      </div>

      <div class="step-grid">
        <div class="image">
          <img id="step-image" src="/images/GlidyScooter.png" alt="Scooter">
        </div>
        <div class="parts" id="step-parts">
        </div>
      </div>
    </div>
    <div class="steps">
      <span class="step" data-step="1">1</span>
      <span class="step" data-step="2">2</span>
    </div>
  </div>
  <script src="/js/stepsGlidy.js"></script> <!-- Link para o ficheiro JS -->
</body>
</html>