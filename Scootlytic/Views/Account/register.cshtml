@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Account</title>
  <link rel="stylesheet" href="/css/register.css"> <!-- Link para o ficheiro CSS -->
</head>
<body>
  <div class="createYourAccount">
    <span class="line1">CREATE</span><br>
    <span class="line2">YOUR ACCOUNT</span>
  </div>  
  <div class="container">
    <form>
      <div class="form-group">
        <div class="label-container">Email</div>
        <input type="email" id="email" placeholder="example@example.com" required>
      </div>
    
      <div class="form-group">
        <div class="label-container">Password</div>
        <input type="password" id="password" placeholder="********" required>
      </div>
    
      <div class="info-text">Password must have at least 9 characters</div>
      <button type="submit">Create Account</button>
    </form>
  </div>
  <script src="/js/register.js"></script> <!-- Link para o ficheiro JS -->
</body>
</html>
