@{
    Layout = null; // Defina um layout apropriado se necess√°rio, por exemplo: "~/Views/Shared/_Layout.cshtml"
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scooter Information</title>
    <link rel="stylesheet" href="../assets/css/scooter.css">
</head>
<body>
    <div class="modal">
        <div class="modal-header">
            <h2>Scooter Information</h2>
            <span class="close-button">&times;</span>
        </div>
        <div class="modal-content">
            <div class="section">
                <h3>References</h3>
                <table>
                    <tr><td>Reference</td><td>1</td></tr>
                    <tr><td>Brand</td><td>SPEEDY</td></tr>
                    <tr><td>Model</td><td id="product-name">Loading...</td></tr>
                </table>
            </div>
            <div class="section">
                <h3>Physical characteristics</h3>
                <table>
                    <tr><td>Color</td><td id="product-color">Loading...</td></tr>
                    <tr><td>Materials</td><td>Aluminum</td></tr>
                </table>
            </div>
            <div class="section">
                <h3>Other characteristics</h3>
                <table>
                    <tr><td>LED Lights</td><td>Yes</td></tr>
                    <tr><td>Maximum Supported Weight</td><td>120kg</td></tr>
                </table>
            </div>
            <div class="section">
                <h3>Performance</h3>
                <table>
                    <tr><td>Maximum Speed</td><td>25km/h</td></tr>
                    <tr><td>Engine Power</td><td>250W</td></tr>
                </table>
            </div>
            <div class="section">
                <h3>Battery</h3>
                <table>
                    <tr><td>Battery Capacity</td><td>5,200mAh 36V</td></tr>
                    <tr><td>Battery Life</td><td>18km</td></tr>
                </table>
            </div>
        </div>
        <div class="modal-footer">
            <button class="add-to-cart">Add to cart</button>
        </div>
    </div>
    <script src="../assets/js/scooter.js"></script>
</body>
</html>
