@{
    Layout = null; // Defina um layout apropriado se necessário, por exemplo: "~/Views/Shared/_Layout.cshtml"
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart Page</title>
    <link rel="stylesheet" href="../assets/css/cart.css">
</head>
<body>
    <h2>PRODUCTS</h2>
    <div class="cart">
        <div class="product">
            <img class="scooter" src="../assets/images/SpeedyScooter.png" alt="Scooter">
            <div class="details">
                <div class="quantity-wrapper">
                    <p class="quantity-label">Quantity:</p>
                    <p class="quantity-value">x2</p>
                </div>
            </div>
            <div class="price-wrapper">
                <p class="price-label">Price:</p>
                <p class="price-value">159.98€</p>
            </div>
            <img class="trash-icon" src="../assets/images/lixo.png" alt="Remover">
        </div>

        <div class="product">
            <img class="scooter" src="../assets/images/GlidyScooter.png" alt="Scooter">
            <div class="details">
                <div class="quantity-wrapper">
                    <p class="quantity-label">Quantity:</p>
                    <p class="quantity-value">x2</p>
                </div>
            </div>
            <div class="price-wrapper">
                <p class="price-label">Price:</p>
                <p class="price-value">59.98€</p>
            </div>
            <img class="trash-icon" src="../assets/images/lixo.png" alt="Remover">
        </div>

        <div class="payment">
            <img class="back-arrow" src="../assets/images/backArrow.png" alt="Seta">
            <img class="paypal" src="../assets/images/paypal.png" alt="PayPal">
            <img class="mbway" src="../assets/images/mbway.png" alt="MB WAY">
            <div class="total">
                <p class="totaltext">TOTAL:</p>
                <p class="totalprice">219.96€</p>
            </div>
        </div>        
    </div>
    <script src="../assets/js/cart.js"></script>
</body>
</html>
